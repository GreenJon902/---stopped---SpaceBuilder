<BaseBuilderScreen>:
    BetterScatter:
        id: baseBuilderHolder

        do_scale: True
        do_translation: True
        do_rotation: False
        scrollToZoom: True

        BaseBuilder:
            id: baseBuilder


    FloatLayout:
        pos: 0, 0
        size_hint: 1, 1

        AnchorLayout:
            anchor_x: "right"
            anchor_y: "bottom"

            BoxLayout:
                size_hint: None, None

                orientation: "vertical"
                right: 0
                y: 0


                SizedButton:
                    isBig: False
                    texture: "settings"
                    sendTo: "SettingsScreen"

                SizedButton:
                    isBig: True
                    texture: "build"
                    sendTo: "BuildingScreen"

<SettingsScreen>:
    ItemsWidget:

<BuildingScreen>:
    ItemsWidget:
        BoxLayout:
            id: content

            HeightBasedButton:
                texture: "inventory"
                sendTo: "SettingsScreen"
